<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1.0" />
	<title>ZGB ManagementSystem</title>
	<%= stylesheet_link_tag 'admin', :media => "all" %>
	<%= javascript_include_tag 'admin' %>
</head>
<body>
	<div id="chaos-header" class="clearfix">
		<div id="chaos-logo-container">
			<div id="chaos-logo-wrap">
				<h1><span>ZGB</span>ManagementSystem</h1>
			</div>
		</div>
		<div id="chaos-user-tools" class="clearfix">
			<div id="chaos-user-info" class="chaos-inset">
				<div id="chaos-user-photo"><%= image_tag 'admin/chaos-default-portrait.png' %></div>
				<div id="chaos-user-functions">
					<div id="chaos-account">欢迎您，<%= session[:administrator][:name]%></div>
					<ul>
						<li><%= link_to '我的账号', edit_admin_profile_path %></li>
						<li><%= link_to '修改密码', edit_password_admin_profile_path %></li>
						<li><%= link_to '退出', admin_signout_path %></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div id="chaos-wrapper">
		<div id="chaos-sidebar-stitch"></div>
		<div id="chaos-sidebar-bg"></div>
		<div id="chaos-sidebar">
			<div id="chaos-nav-collapse">
				<span></span>
				<span></span>
				<span></span>
			</div>
			<div id="chaos-navigation">
				<ul>
					<li>
					 <%= link_to '控制面板', admin_dashboard_path %>
					</li>
					<li>
						<a href="#">海报管理</a>
						<ul>
							<li><%= link_to '海报列表', admin_posters_path %></li>
							<li><%= link_to '添加海报', new_admin_poster_path %></li>
						</ul>
					</li>
					<li>
						<a href="#">文章管理</a>
						<ul>
							<li><%= link_to '文章列表', admin_articles_path %></li>
							<li><%= link_to '添加文章', new_admin_article_path %></li>
						</ul>
					</li>
					<li>
						<a href="#">附件管理</a>
						<ul>
							<li><%= link_to '附件列表', admin_attachments_path %></li>
							<li><%= link_to '添加附件', new_admin_attachment_path %></li>
						</ul>
					</li>
					<li>
						<a href="#">房地产项目管理</a>
						<ul>
							<li><%= link_to '房地产项目列表', admin_real_estate_projects_path %></li>
							<li><%= link_to '添加房地产项目', new_admin_real_estate_project_path %></li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
		<div id="chaos-container" class="clearfix">
			<div class="container">
				<%= yield %>
			</div>
			<div id="chaos-footer">Copyright ZBG 2013-2014. All Rights Reserved.</div>
		</div>
	</div>
</body>
</html>